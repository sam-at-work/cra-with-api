{
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start:dev": "run-p start:dev:*",
    "start:dev:client": "yarn --cwd client start",
    "start:dev:server": "yarn --cwd server start:dev",
    "start:prod": "run-p start:prod:*",
    "start:prod:server": "yarn --cwd server start:prod",
    "start:prod:client": "yarn build:client-to-server-static",
    "build": "run-p build:*",
    "build:client-to-server-static": "yarn --cwd client build && rm -rf server/static && mv client/build/ server/static",
    "build:yarn-lock-to-server-repo": "cp yarn.lock server/",
    "predeploy": "yarn build",
    "deploy": "yarn --cwd server deploy | ./scripts/update-demo-url.sh"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.3",
    "prettier": "^1.13.7"
  },
  "engines": {
    "yarn": ">=1"
  }
}
